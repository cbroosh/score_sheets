<%= form_for @user, url: '/users(:id)', :html => { :multipart => true } do |f| %>
    <div class='form-group'>
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class='form-group'>
        <%= f.label :password %>
        <%= f.text_field :password, class: 'form-control' %>
    </div>
    <div class='form-group'>
        <%= f.label :confirm_password %>
        <%= f.text_field :confirm_password, class: 'form-control' %>
    </div>
<% end %>